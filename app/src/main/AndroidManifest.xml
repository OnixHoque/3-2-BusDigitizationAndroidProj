<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anik.busdigitizationprototype" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bus_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:label="@string/title_activity_sign_up" >
            <intent-filter>
                <action android:name="com.example.anik.busdigitizationprototype.SignUp" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartJourney"
            android:label="@string/title_activity_start_journey" >
            <intent-filter>
                <action android:name="com.example.anik.busdigitizationprototype.StartJourney" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Result"
            android:label="@string/title_activity_result" >
            <intent-filter>
                <action android:name="com.example.anik.busdigitizationprototype.Result" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DuringJourney"
            android:label="@string/title_activity_during_journey" >
            <intent-filter>
                <action android:name="com.example.anik.busdigitizationprototype.DuringJourney" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Feedback"
            android:label="@string/title_activity_feedback" >

            <intent-filter>
                <action android:name="com.example.anik.busdigitizationprototype.Feedback" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


    </application>


</manifest>
